#include <math.h>

#include <opencog/atoms/distvalue/Histogram.h>
#include <opencog/util/Logger.h>
#include <opencog/util/exceptions.h>

using namespace opencog;

class HistogramTest :  public CxxTest::TestSuite
{
public:
	HistogramTest() {}

	void setUp() {}

	void tearDown() {}

	void testMerge()
	{
		NBin bin1{Bin{0.0,0.4},Bin{0.2,0.6}};
		NBin bin2{Bin{0.6,1.0},Bin{0.6,0.9}};
		NBin bin3{Bin{0.25,0.75},Bin{0.7,0.8}};

		Histogram<double> hist1;
		hist1[bin1] = 10;
		hist1[bin2] = 10;
		Histogram<double> hist2;
		hist2[bin3] = 10;

		Histogram<double> merged = hist1.merge(hist2);

		std::cout << merged.to_string("");
	}
};
